<%= form_with url: category_expenses_path, scope: :expense do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount %>
  </div>
  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.collection_select :category_ids, current_user.categories.order(:name), :id, :name, {}, { class: "form-select  m-2 w-75", multiple: true, required: true } %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
