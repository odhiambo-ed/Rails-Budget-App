
<div class="b-container bg-light">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="card text-center">
      <div class="card-header bg-primary bg-gradient">
        <div class="row">
          <div class="col-12 d-flex flex-row justify-content-between align-middle mt-3 pt-3">
            <%= link_to new_session_path(resource_name) do %>
              <h3 class = "text-light p-1"><i class="fa-solid fa-arrow-left"></i></h3>
            <% end %>
            <h4 class = "text-light p-1">Register</h4>
            <h5 class = "text-light p-1">Next</h5>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="field form-group mb-4">
          <%= f.text_field :name, autofocus: true, placeholder: "Full Name", autocomplete: "name", class: "w-100" %>
        </div>
        <div class="field form-group mb-4">
          <%= f.text_field :username, autofocus: true, placeholder: "Your Username", autocomplete: "username", class: "w-100" %>
        </div>
        <div class="field form-group mb-4">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "email", class: "w-100" %>
        </div>
        <div class="field mb-4">
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, placeholder: "New Password", autocomplete: "new-password", class: "w-100" %>
        </div>
        <div class="field mb-4">
          <%= f.password_field :password_confirmation, placeholder: "Confirm New Password", autocomplete: "new-password", class: "w-100" %>
        </div>
        <div class="actions form-group">
          <%= f.submit "Sign Up", class: "btn btn-primary bg-gradient w-100", data: { turbo: false } %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row mt-2">
    <div class="col-12 m-2 p-3 text-center">
      Already have an account?<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
